{
  "name": "ft_transcendence",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "scripts": {
    "build:bundle": "node build.mjs",
    "build:ts": "tsc -p tsconfig.json",
    "build:css": "npx @tailwindcss/cli -i src/public/style.css -o dist/public/style.css",
    "build:assets": "cpy src/public/**/*.{html,css,jpg,glb,hdr} dist/public",
    "build:assets2": "rsync -av --include='*/' --include='*.html' --include='*.css' --include='*.jpg' --include='*.glb' --include='*.hdr' --exclude='*' src/public/ dist/public",
    "build": "npm run build:ts && npm run build:assets && npm run build:css && npm run build:bundle",
    "build2": "npm run build:ts && npm run build:assets2 && npm run build:css && npm run build:bundle",
    "watch:tsc": "tsc -w",
    "start": "node --env-file=.env dist/index.js",
    "dev": "nodemon --watch src --ext ts,html,js --exec \"npm run build && npm run start\"",
    "dev2": "nodemon --watch src --ext ts,html,js --exec \"npm run build2 && npm run start\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@babylonjs/core": "^8.12.1",
    "@fastify/cookie": "^11.0.2",
    "@fastify/error": "^4.1.0",
    "@fastify/jwt": "^9.1.0",
    "@fastify/multipart": "^9.0.3",
    "@fastify/static": "^8.1.1",
    "@fastify/websocket": "^11.0.0",
    "bcrypt": "^5.1.1",
    "bindings": "^1.5.0",
    "fastify": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "otplib": "^12.0.1",
    "pino-pretty": "^13.0.0",
    "qrcode": "^1.5.4",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@babylonjs/core": "^8.12.1",
	"@babylonjs/loaders": "^8.12.1",
    "@babylonjs/inspector": "^8.12.1",
    "@tailwindcss/cli": "^4.1.6",
    "@tailwindcss/postcss": "^4.1.5",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.3",
    "@types/qrcode": "^1.5.5",
    "@types/sqlite3": "^3.1.11",
    "cpy-cli": "^5.0.0",
    "esbuild": "^0.25.5",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.5",
    "typescript": "^5.8.3"
  }
}
